{{#modal-dialog onClose=(route-action 'close')}}
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">New video</h4>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <label for="title">Title</label>
      {{bs-input value=model.title}}
      <span class="help-block">{{model.errors.title.firstObject.message}}</span>
    </div>
    <div class="form-group">
      <label for="location">Location</label>
      {{bs-input value=model.location}}
      <span class="help-block">{{model.errors.location.firstObject.message}}</span>
    </div>
    <div class="form-group">
      <label for="categories">Categories</label>
      {{ember-selectize
        content=allCategories
        selection=model.categories
        optionValuePath="content.id"
        optionLabelPath="content.name"
        create-item=(action 'createCategory')
        multiple=true
        placeholder="Select one or more categories" }}
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" data-dismiss="modal" class="btn btn-plain">Cancel</a>
    <button type="button" class="btn btn-warning"  {{action 'save'}}>Add</button>
  </div>
{{/modal-dialog}}
